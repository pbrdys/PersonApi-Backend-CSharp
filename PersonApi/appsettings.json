{
  // Logging-Level für verschiedene Bereiche
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  // Zugriff von überall erlaubt
  "AllowedHosts": "*",

  "DataSourceType": "Csv", // "Database" or "Csv", ... 
  

  // Wenn true: CSV wird beim Start in DB importiert (kann Daten löschen!)
  "ImportOnStartup": false,

  // SQLite-DB-Verbindungsstring
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=persons.db"
  },

  // Farb-IDs zu Farbnamen (für CSV-Import)
  "ColorMapping": {
    "1": "blau",
    "2": "grün",
    "3": "violett",
    "4": "rot",
    "5": "gelb",
    "6": "türkis",
    "7": "weiß"
  }
}
